Resources:
    DynamoDB:
        Type: AWS::DynamoDB::GlobalTable
        Properties:
            TableName: account
            BillingMode: PAY_PER_REQUEST
            AttributeDefinitions:
              - AttributeName: "account_id"
                AttributeType: "N"
            KeySchema:
              - AttributeName: "account_id"
                KeyType: "HASH"
            Replicas:
              - Region: us-east-1
              - Region: us-west-2
